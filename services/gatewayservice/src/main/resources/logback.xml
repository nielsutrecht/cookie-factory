<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.cloud.gateway.handler" level="info"/> <!-- Set to debug to see route handling -->

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>